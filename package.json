{
  "name": "handy-scroll",
  "version": "1.0.0",
  "description": "Handy dependency-free floating scrollbar",
  "main": "dist/handy-scroll.min.js",
  "module": "src/handy-scroll.js",
  "style": "dist/handy-scroll.css",
  "scripts": {
    "lint": "eslint src/*.js",
    "test": "echo \"Error: no test specified\" && exit 1",
